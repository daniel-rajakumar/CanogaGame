<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/final_result_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    android:layoutAnimation="@anim/layout_stagger"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvFinalTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Final Results"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Oplcanoga.Title"
        android:textColor="@color/canoga_on_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFinalSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFinalTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvFinalWinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Winner: -"
                android:textAppearance="@style/TextAppearance.Oplcanoga.TitleSmall"
                android:textColor="@color/canoga_on_surface" />

            <TextView
                android:id="@+id/tvFinalScores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Human: 0  |  Computer: 0"
                android:textAppearance="@style/TextAppearance.Oplcanoga.Body"
                android:textColor="@color/canoga_on_surface_variant" />

            <TextView
                android:id="@+id/tvFinalSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.Oplcanoga.BodySmall"
                android:textColor="@color/canoga_on_surface_variant" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackToHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Back to Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardFinalSummary" />

</androidx.constraintlayout.widget.ConstraintLayout>
