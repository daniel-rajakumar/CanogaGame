<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    android:layoutAnimation="@anim/layout_stagger"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvSetupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Game Setup"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Oplcanoga.Title"
        android:textColor="@color/canoga_on_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBoardSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSetupTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBoardSizeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose board size"
                android:textAppearance="@style/TextAppearance.Oplcanoga.Label"
                android:textColor="@color/canoga_on_surface" />

            <RadioGroup
                android:id="@+id/rgBoardSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSize9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textAppearance="@style/TextAppearance.Oplcanoga.Label" />

                <RadioButton
                    android:id="@+id/rbSize10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textAppearance="@style/TextAppearance.Oplcanoga.Label" />

                <RadioButton
                    android:id="@+id/rbSize11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textAppearance="@style/TextAppearance.Oplcanoga.Label" />
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRollOff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardBoardSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRollOffTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roll-off: who goes first?"
                android:textAppearance="@style/TextAppearance.Oplcanoga.TitleSmall"
                android:textColor="@color/canoga_on_surface" />

            <LinearLayout
                android:id="@+id/llRollOffDice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHumanDice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Human: -"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Oplcanoga.Body" />

                <TextView
                    android:id="@+id/tvComputerDice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Computer: -"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Oplcanoga.Body" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRollOffResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Press Roll to decide who goes first."
                android:textAppearance="@style/TextAppearance.Oplcanoga.BodySmall"
                android:textColor="@color/canoga_on_surface_variant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRollOff"
                style="@style/Widget.Oplcanoga.Button.Tonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Roll Dice" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardRollOff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
