<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_input_dice_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Dice Values"
        android:textAppearance="@style/TextAppearance.Oplcanoga.TitleSmall"
        android:textColor="@color/canoga_on_surface"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/tvDie1Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Die 1"
        android:textAppearance="@style/TextAppearance.Oplcanoga.Label"
        android:textColor="@color/canoga_on_surface" />

    <LinearLayout
        android:id="@+id/layoutDie1Row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie1_1"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie1_2"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie1_3"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie1_4"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie1_5"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie1_6"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="6" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDie2Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Die 2"
        android:textAppearance="@style/TextAppearance.Oplcanoga.Label"
        android:textColor="@color/canoga_on_surface" />

    <LinearLayout
        android:id="@+id/layoutDie2Row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie2_1"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie2_2"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie2_3"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie2_4"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie2_5"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDie2_6"
            style="@style/Widget.Oplcanoga.Button.Dice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="6" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Done" />

</LinearLayout>
