<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Shape.Oplcanoga.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.Oplcanoga.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="Shape.Oplcanoga.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="Widget.Oplcanoga.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="strokeColor">@color/canoga_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearance">@style/Shape.Oplcanoga.Medium</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.Oplcanoga.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">18dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Oplcanoga.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">18dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Oplcanoga.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">18dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Oplcanoga.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">18dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Oplcanoga.Button.Dice" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Oplcanoga.Display" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:fontFamily">serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Oplcanoga.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Oplcanoga.TitleSmall" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Oplcanoga.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Oplcanoga.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Oplcanoga.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
